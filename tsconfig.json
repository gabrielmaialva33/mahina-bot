{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
    "paths": {
      "#src/*": [
        "./src/*.js"
      ],
      "#common/*": [
        "./src/common/*.js"
      ],
      "#commands/*": [
        "./src/commands/*.js"
      ],
      "#interfaces/*": [
        "./src/interfaces/*.js"
      ],
      "#utils/*": [
        "./src/utils/*.js"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
